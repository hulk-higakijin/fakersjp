<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= post.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Post likes count:</strong>
    <%= post.post_likes_count %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reposts count:</strong>
    <%= post.reposts_count %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Comments count:</strong>
    <%= post.comments_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this post", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
