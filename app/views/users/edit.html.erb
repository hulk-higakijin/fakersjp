<div class="relative bg-gray-700 opacity-75">
  <%= render 'detail' %>
</div>

<div class="absolute top-0 left-0 w-screen h-screen flex text-white">
  <div class="h-2/3 w-1/3 bg-black m-auto rounded-xl">
    <div class="flex p-2 gap-x-4">
      <%= render 'svg/cancel', link: user_path(@user.public_uid) %>
      <p class="font-bold text-xl my-auto">プロフィールを編集</p>
      <button class="bg-white text-black px-4 py-1 my-auto rounded-full ml-auto mr-4">保存</button>
    </div>
    <div class="relative">
      <img src="https://rakuraku-info.jp/wp-content/uploads/2020/10/image1-3.jpg" class="w-full object-cover max-h-40 opacity-50">
      <div class="absolute w-full bottom-1/4">
        <label for="bg-image" class="cursor-pointer flex w-8 mx-auto">
          <%= render "svg/camera" %>
        </label>
        <input id="bg-image" name="bg-image" type="file" name="example" accept="image/jpeg, image/png" class="invisible">
      </div>
    </div>
    <div class="relative ml-5">
      <img
        src="https://cdn.stocksnap.io/img-thumbs/960w/bird-animal_KNUKMUR64U.jpg"
        class="rounded-full object-cover border-4 border-black w-32 h-32 absolute top-50"
        style="margin-top: -4rem;"
      >
      <div class="absolute w-32 h-32 flex" style="margin-top: -4rem;">
        <label for="avatar" class="cursor-pointer flex w-8 mx-auto">
          <%= render "svg/camera" %>
        </label>
        <input id="avatar" name="avatar" type="file" name="example" accept="image/jpeg, image/png" class="invisible w-0">        
      </div>
    </div>
    <div class="mt-20 mx-6 flex-col">
      <div class="mb-6">
        <label for="name">
          <div class="flex-col border border-gray-700  cursor-text rounded-md focus-within:border-blue-500 text-gray-500 focus-within:text-blue-500">
            <p class="text-sm px-2 pt-1">名前</p>
            <input id="name" name="name" type="text" class="border-none focus:ring-0 bg-black rounded-md w-full text-white" autocomplete="off">
          </div>
        </label>
      </div>
      <div class="mb-6">
        <label for="introduction">
          <div class="flex-col border border-gray-700 cursor-text rounded-md focus-within:border-blue-500 text-gray-500 focus-within:text-blue-500">
            <p class="text-sm px-2 pt-1">自己紹介</p>
            <textarea id="introduction" name="introduction" type="text" class="border-none focus:ring-0 bg-black rounded-md w-full resize-none text-white" autocomplete="off"></textarea>
          </div>
        </label>
      </div>
    </div>
  </div>
</div>
